html
  head
    title Login - Zain Purchasing
    link(rel='stylesheet', href='css/bootstrap.min.css')
    style(type='text/css')
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    link(rel='stylesheet', href='css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='css/login.css')
    script(src='lib/jquery-1.7.2.min.js')
    script(src='lib/bootstrap.min.js')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
            span(class='icon-bar')
            span(class='icon-bar')
            span(class='icon-bar')
          a(class='brand', href='#') Zain Purchasing
    .container
      .row
        .span12
          .form-register
            h2 Register
            form(action='/register', method='POST')
              #login
                label(for='username') Username
                if ('undefined' !== typeof data)
                  input(type='text', name='username', placeholder='username', value='#{data.username}')
                else
                  input(type='text', name='username', placeholder='username')
              #password
                label(for='password') Password
                if ('undefined' === typeof data)
                  input(type='password', name='password')
                else
                  input(type='password', name='password', value='#{data.password}')
              #phone
                label(for='phone') Phone
                if ('undefined' === typeof data)
                  input(type='text', name='phone')
                else
                  input(type='text', name='phone', value='#{data.phone}')
              #first-name
                label(for='firstName') First Name
                if ('undefined' === typeof data)
                  input(type='text', name='firstName')
                else
                  input(type='text', name='firstName', value='#{data.firstName}')
              #last-name
                label(for='lastName') Last Name
                if ('undefined' === typeof data)
                  input(type='text', name='lastName')
                else
                  input(type='text', name='lastName', value='#{data.lastName}')
              #submit
                input(type='submit') Register
            - if ('undefined' !== typeof errors && errors.length)
              .alert
                  button(type='button', class='close', data-dismiss='alert') x
                  ul.errors
                    - each err in errors
                      li #{err}